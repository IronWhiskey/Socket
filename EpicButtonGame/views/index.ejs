<html>
    <head>
        <link rel="stylesheet" type="text/css" href="/css/style.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script type ="text/javascript" src="/socket.io/socket.io.js"></script>
        <script type ="text/javascript">

            // --- setting up socket io functionality emitters and listeners ---
            var socket = io();
            $(document).ready(function(){

                socket.on('info', function (data) {
                    document.getElementById("heading").innerHTML = `The button has been pushed ${data.msg.num} time(s)`;
                });

            });

            function updateCount() {
                socket.emit('updateCount');
            }

            function resetCount() {
                socket.emit('resetCount');
            }

        </script>
    </head>

    <body>
        <div id='wrapper'> 
            
            <h1 id='heading'></h1>

            <p>Push the button to update the count!</p>
            <button id='epic' onclick="event.preventDefault(); updateCount()">Push the Epic Button</button>
            
            <button id='reset' onclick="event.preventDefault(); resetCount()">Reset Count</button>

        </div>
    </body>
</html>